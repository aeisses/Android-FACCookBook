<?xml version="1.0" encoding="utf-8"?>
<card_view:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              card_view:elevation="@dimen/recipe_card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/featured_recipe_description"
            android:scaleType="centerCrop"
            tools:src="@drawable/default_recipe_image"/>

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/recipe_image"
            android:background="@color/recipe_name_background"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/recipe_name_text_color"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Recipe Title"/>

    </RelativeLayout>

</card_view:android.support.v7.widget.CardView>